<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">
    <ImageView
        android:id="@+id/alarm_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="8dp"
        android:src="@drawable/alarm_icon"/>
    <TextView
        android:id="@+id/date_for_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/alarm_icon"
        android:layout_toRightOf="@+id/alarm_icon"
        android:textSize="18dp"
        android:text="date"/>
    <TextView
        android:id="@+id/time_for_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_for_alarm"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/alarm_icon"
        android:textSize="21dp"
        android:text="time"/>

    <Button
        android:id="@+id/alarm_delete_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/alarm_icon"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_action_delete"
        android:layout_marginBottom="3dp" />

</RelativeLayout>